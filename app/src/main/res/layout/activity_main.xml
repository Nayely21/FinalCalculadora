<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|bottom"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtProceso"
        android:layout_width ="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingEnd="20dp"
        android:textSize="40sp"
        android:gravity="end|center"
        />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end|center"
        android:paddingEnd="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="right">

        <Button
            android:id="@+id/btnRaiz"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="²√"
            android:textColor="@color/verde"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnParenI"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="("
            android:textColor="@color/verde"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnParenD"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text=")"
            android:textColor="@color/verde"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnBorrarUno"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:drawableEnd="@android:drawable/stat_notify_more"
            android:paddingRight="40dp"
            android:textAlignment="center"
            android:textColor="@color/verde"
            android:textSize="20sp" />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="c"
                android:background="@color/black"
                android:textSize="30sp"
                android:textColor="@color/rojo"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/btnCuadrado"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="x²"
                android:textSize="30sp"
                android:textColor="@color/verde"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnPorcentaje"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="30sp"
                android:textColor="@color/verde"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/btnDivision"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="÷"
                android:textColor="@color/verde"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <Button
                android:id="@+id/btnSiete"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/btnOcho"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnNueve"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="x"
                android:textColor="@color/verde"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <Button
                android:id="@+id/btnCuatro"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/btnCinco"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnSeis"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnRestar"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:text="-"
                android:layout_width="110dp"
                android:textColor="@color/verde"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:id="@+id/btnUno"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/btnDos"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnTres"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnSuma"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="+"
                android:layout_width="110dp"
                android:textColor="@color/verde"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <Button
                android:id="@+id/btnMasMenos"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

            <Button
                android:id="@+id/btnCero"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/btnPunto"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />
            <Button
                android:id="@+id/igual"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="="
                android:layout_width="110dp"
                android:background="@color/verde"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                />

        </LinearLayout>

    </GridLayout>

</LinearLayout>